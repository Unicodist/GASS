<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table table-hover table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Edit</th>
            </tr>
            @foreach (var item in ViewBag.accountlist)
            {
            <tr>
                <td>@item.firstname</td>
                <td>@item.lastname</td>
                <td>@item.username</td>
                <td>@item.email</td>
                <td>@item.role</td>
                <td><a asp-controller="Users" asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-primary"><i class="text-secondary fas fa-edit"></i></a></td>
               </tr>
            }
        </table>
    </div>
    <div class="col-md-3"></div>
</div>