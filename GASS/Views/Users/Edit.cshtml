<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form class="form" asp-action="EditAction">
            <input type="hidden" value="@ViewBag.user.id" name="id"/>
            <table class="table table-dark table-striped">
                <thead class="text-center h4">Change the information of the user @ViewBag.user.firstname @ViewBag.user.lastname</thead>
                <tr class="form-group">
                    <th>First name</th>
                    <td><input class="form-control" type="text" value="@ViewBag.user.firstname" name="firstname" /></td>
                </tr>
                <tr>
                    <th>Last name</th>
                    <td><input class="form-control" type="text" value="@ViewBag.user.lastname" name="lastname" /></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><input class="form-control" type="text" value="@ViewBag.user.email" name="email" /></td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td><input class="form-control" type="text" value="@ViewBag.user.username" name="username" /></td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>
                        <select class="form-control" name="role">
                            <option value="admin">Admin</option>
                            <option value="mod">Moderator</option>
                            <option value="user">User</option>
                        </select>
                    </td>
                </tr>
            </table>
            <button style="width:100%;" class="btn btn-success" type="submit" asp-route-id="@ViewBag.user.id">Save</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>