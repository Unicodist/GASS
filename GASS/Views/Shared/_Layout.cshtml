<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameBrick</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        .error {
            color: orangered;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <header style="border-bottom: 1px white solid;">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assets" asp-action="Category" asp-route-id="2D">2D</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assets" asp-action="Category" asp-route-id="3D">3D</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assets" asp-action="Category" asp-route-id="audio">Audio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assets" asp-action="Category" asp-route-id="gui">GUI</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0" asp-controller="Search" asp-action="Index" method="get">
                    <div class="input-group my-auto">
                        <input type="search" class="form-control" placeholder="Search for assets...">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary fas fa-search" type="submit"></button>
                        </div>
                    </div>
                </form>
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <div class="btn-group">
                            <a class="nav-link btn btn-success" asp-controller="Login" asp-action="Index">Login</a>
                            <a class="nav-link btn btn-outline-success" asp-controller="Login" asp-action="Register">Sign Up</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GASS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
