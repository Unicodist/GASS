<div class="row text-dark">
    @{ 
        foreach(var item in ViewBag.assetlist)
        {
            <div class="col-3 mt-3">
                <a asp-Controller="Asset" asp-action="Browse" asp-route-id="@item.id" style="color:black; text-decoration:none;">
                    <div class="card">
                        <div class="card-header">@item.title</div>
                        <div class="card-body">
                            @item.description
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>