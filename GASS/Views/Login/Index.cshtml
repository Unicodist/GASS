@model GASS.Models.LoginModel
<link rel="stylesheet" href="~/css/style.css" />
<div class="row">
    <img id="pgbg" src="../images/login-background.jpg" />
    <div class="col-lg-4"></div>
    <div class="col-sm-12 col-lg-4 mt-5">
        <div class="hidden">@ViewData["Demo"]</div>
        <form asp-action="LogAction" asp-controller="Login" method="post">
            <div class="form-group">
                <label for="inputUser">Username</label>
                <input name="username" type="text" class="form-control" id="inputUser" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input name="password" type="password" class="form-control" id="inputPassword" required placeholder="Password">
            </div>
            <div class="form-group">
                <label class="form-check-label"><input type="checkbox"> Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
