<div class="row">
    <div class="col-md-4">
        <h3 class="text-center">Admin List</h3>
        <table class="table table-striped table-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
            @foreach (var item in ViewBag.adminlist)
            {
                <tr>
                    <td>@item.firstname @item.lastname</td>
                    <td>@item.username</td>
                    <td title="Ban user"><button class="btn btn-outline-danger"><i class="text-secondary fas fa-hammer"></i></button></td>
                    <td title="Demote to Moderator"><button class="btn btn-outline-danger"><i class="text-secondary fas fa-thumbs-down"></i></button></td>
                    <td title="Demote to User"><button class="btn btn-outline-danger"><i class="text-secondary fas fa-user"></i></button></td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4">
        <h3 class="text-center">Moderator List</h3>
        <table class="table table-striped table-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
            @foreach (var item in ViewBag.modlist)
            {
                <tr>
                    <td>@item.firstname @item.lastname</td>
                    <td>@item.username</td>
                    <td title="Ban user"><button class="btn btn-outline-danger"><i class="text-secondary fas fa-hammer"></i></button></td>
                    <td title="Promote to Moderator"><button class="btn btn-outline-success"><i class="text-secondary fas fa-thumbs-up"></i></button></td>
                    <td title="Promote to Admin"><button class="btn btn-outline-success"><i class="text-secondary fas fa-user"></i></button></td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4">
        <h3 class="text-center">Users List</h3>
        <table class="table table-striped table-dark">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
            @foreach(var item in ViewBag.userlist)
            {
                <tr>
                    <td>@item.firstname @item.lastname</td>
                    <td>@item.username</td>
                    <td title="Ban user"><button class="btn btn-outline-danger"><i class="text-secondary fas fa-hammer"></i></button></td>
                    <td title="Promote to Moderator"><button class="btn btn-outline-success"><i class="text-secondary fas fa-thumbs-up"></i></button></td>
                    <td title="Promote to Admin"><button class="btn btn-outline-success"><i class="text-secondary fas fa-user"></i></button></td>
                </tr>
            }
        </table>
    </div>
</div>